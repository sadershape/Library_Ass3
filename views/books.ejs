<%- include("navbar") %>

<head>
    <link rel="stylesheet" href="/styles.css">
</head>

<h2>Book Search</h2>
<form action="/books" method="GET">
    <input type="text" name="q" placeholder="Search for books" required>
    <button type="submit">Search</button>
</form>

<ul>
    <% books.forEach(book => { %>
    <li>
        <h3><%= book.title %></h3>
        <p>Author: <%= book.authors.map(a => a.name).join(", ") %></p>
        <p>Language: <%= book.languages.join(", ") %></p>
        <p>Download: <a href="<%= book.formats["text/html"] || "#" %>" target="_blank">Read Online</a></p>
    </li>
    <% }); %>
</ul>

<%- include("footer") %>
