<style>
    nav {
        background-color: #0044cc;
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
    }

    .nav-links {
        display: flex;
        gap: 20px;
    }

    nav a {
        text-decoration: none;
        color: white;
        font-size: 18px;
        padding: 10px 15px;
        transition: color 0.3s ease-in-out;
        position: relative;
    }

    nav a::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -3px;
        width: 100%;
        height: 2px;
        background-color: white;
        transform: scaleX(0);
        transition: transform 0.3s ease-in-out;
    }

    nav a:hover {
        color: #ffdd57;
    }

    nav a:hover::after {
        transform: scaleX(1);
    }
</style>

<nav>
    <div class="nav-links">
        <a href="/">Home</a>
        <a href="/books">Gutenberg Books</a>
        <a href="/books/openLibrary">Open Library</a>
        <a href="/googlebooks">Google Books</a>
        <a href="/admin">Admin</a>
        <% if (session.user) { %>
            <a href="/user/profile">Profile</a>
        <% } %>
    </div>

    <div>
        <% if (session.user) { %>
            <a href="/logout">Logout</a>
        <% } else { %>
            <a href="/login">Login</a>
        <% } %>
    </div>
</nav>
