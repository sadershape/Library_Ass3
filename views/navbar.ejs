<style>
    nav {
        background-color: #0044cc; /* Dark blue background */
        padding: 15px 20px;
        display: flex;
        justify-content: space-around;
        align-items: center;
    }

    nav a {
        text-decoration: none;
        color: white; /* White text for contrast */
        font-size: 18px;
        padding: 10px 15px;
        transition: background 0.3s ease-in-out;
        border-radius: 5px;
    }

    nav a:hover {
        background-color: rgba(255, 255, 255, 0.2); /* Subtle hover effect */
    }
</style>

<nav>
    <a href="/"><%= translations.nav.home %></a>
    <a href="/books"><%= translations.nav.gutenberg %></a>
    <a href="/books/openLibrary"><%= translations.nav.openLibrary %></a>
    <a href="/googlebooks"><%= translations.nav.googleBooks %></a>
    <a href="/weather"><%= translations.nav.weather %></a>
    <a href="/admin"><%= translations.nav.admin %></a>

    <div>
        <% if (language === "en") { %>
            🇬🇧 <strong>English</strong> | <a href="/change-language/ru">🇷🇺 Русский</a>
        <% } else { %>
            <a href="/change-language/en">🇬🇧 English</a> | 🇷🇺 <strong>Русский</strong>
        <% } %>
    </div>

    <% if (user) { %>
        <a href="/logout"><%= translations.nav.logout %></a>
    <% } else { %>
        <a href="/login"><%= translations.nav.login %></a>
    <% } %>
</nav>
