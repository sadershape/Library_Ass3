<style>
    nav {
        background-color: #0044cc; /* Dark blue background */
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap; /* Ensures it wraps nicely on smaller screens */
    }

    .nav-links {
        display: flex;
        gap: 20px;
    }

    nav a {
        text-decoration: none;
        color: white;
        font-size: 18px;
        padding: 10px 15px;
        transition: color 0.3s ease-in-out;
        position: relative;
    }

    nav a::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -3px;
        width: 100%;
        height: 2px;
        background-color: white;
        transform: scaleX(0);
        transition: transform 0.3s ease-in-out;
    }

    nav a:hover {
        color: #ffdd57; /* Brighter yellowish color on hover */
    }

    nav a:hover::after {
        transform: scaleX(1);
    }

    .language-switcher {
        font-size: 18px;
        color: white;
    }

    .language-switcher a {
        text-decoration: none;
        font-weight: bold;
        color: white;
    }

    .language-switcher a:hover {
        text-decoration: underline;
    }
</style>

<nav>
    <div class="nav-links">
        <a href="/"><%= translations.home %></a>
        <a href="/books"><%= translations.gutenberg %></a>
        <a href="/books/openLibrary"><%= translations.openLibrary %></a>
        <a href="/googlebooks"><%= translations.googleBooks %></a>
        <a href="/admin"><%= translations.admin %></a>
    </div>

    <div class="language-switcher">
        <% if (language === "en") { %>
            🇬🇧 <strong>English</strong> | <a href="/set-language/ru">🇷🇺 Русский</a>
        <% } else { %>
            <a href="/set-language/en">🇬🇧 English</a> | 🇷🇺 <strong>Русский</strong>
        <% } %>
    </div>

    <div>
        <% if (user) { %>
            <a href="/logout"><%= translations.nav.logout %></a>
        <% } else { %>
            <a href="/login"><%= translations.nav.login %></a>
        <% } %>
    </div>
</nav>
