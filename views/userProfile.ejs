<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Profile</title>
    <link rel="stylesheet" href="/css/styles.css"> <!-- Link to your CSS file -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <header>
        <%- include("navbar", { session: session }) 
    </header>
    <main class="container">
        <h1>User Profile</h1>
        <div class="profile-container">
            <% if (user) { %>
                <h2>Username: <%= user.username %></h2>
                <h3>Quiz Results</h3>
                <ul>
                    <% if (user.quizResults && user.quizResults.length > 0) { %>
                        <% user.quizResults.forEach(result => { %>
                            <li>
                                Score: <%= result.score %> - Date: <%= new Date(result.date).toLocaleDateString() %>
                            </li>
                        <% }) %>
                    <% } else { %>
                        <p>No quiz results available.</p>
                    <% } %>
                </ul>
            <% } else { %>
                <p><%= error %></p>
            <% } %>
        </div>
    </main>
    <footer>
        <%- include("footer") %> <!-- Include the footer partial -->
    </footer>
</body>
</html>
