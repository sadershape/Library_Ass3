<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Home</title>
    <link rel="stylesheet" href="/styles.css"> <!-- ✅ Ensures CSS is loaded -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"> <!-- ✅ Bootstrap for styling -->
</head>
<body>
    <%- include("navbar") %>

    <div class="container text-center">
        <h1>Welcome to the Library</h1>
        <p>Explore books, check weather, and manage the library.</p>

        <hr>

        <!-- Display Library Items -->
        <h2>Library Collection</h2>
        <div class="row">
            <% items.forEach(item => { %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <!-- Bootstrap Carousel -->
                        <div id="carousel<%= item._id %>" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <% item.images.forEach((img, index) => { %>
                                    <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                        <img src="<%= img %>" class="d-block w-100" alt="Item Image">
                                    </div>
                                <% }); %>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carousel<%= item._id %>" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carousel<%= item._id %>" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            </button>
                        </div>

                        <!-- Item Details -->
                        <div class="card-body">
                            <h5 class="card-title"><%= item.name_en %> / <%= item.name_other %></h5>
                            <p class="card-text"><%= item.description_en %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <%- include("footer") %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> <!-- ✅ Bootstrap JS for carousel -->
</body>
</html>
